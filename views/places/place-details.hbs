<h1 class="mt-5">Place Details</h1>

<div class="row">

    <div class="col-md-6">

        <hr>
        <h2>{{name}}</h2>
        {{!-- <img src="{{image}}" class="card-img-top" alt="..."> --}}
        <p><button type="button" class="btn btn-outline-secondary my-2">{{type}}</button></p>
        <p class="card-text">Coordinates:</p>
        <ul>
            <li>Latitud: {{location.coordinates.[0]}}</li>
            <li>Longitud: {{location.coordinates.[1]}}</li>
        </ul>
        <hr>
        <a href="/places/{{_id}}/edit" class="btn btn-warning">Edit</a>

        <form action="/places/{{_id}}/delete" method="POST" style="display: inline">
            <input type="submit" value="Delete" class="btn btn-danger">
        </form>
    </div>
</div>